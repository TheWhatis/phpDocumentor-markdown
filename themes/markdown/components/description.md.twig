{% spaceless %}
  {% if node.description and not node.description.empty %}
    {% set description = node.description.bodyTemplate %}
    {% for tag in node.description.tags %}
      {% set key = "%" ~ loop.index ~ "$s" %}
      {% set description = description|replace({
      (key): '[' ~ tag.reference|trim ~ ']()'|trim
      }) %}
    {% endfor %}
    {{ description|trim }}
  {% endif %}
{% endspaceless %}
